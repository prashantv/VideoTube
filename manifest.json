{
   "name": "VideoTube",
   "version": "0.1",
   "description": "An extension to convert Youtube's flash video player to use the video element instead",
   "content_scripts": [
      {
         "matches": ["http://*.youtube.com/watch*"],
         "js": ["injectyoutube.js"],
         "run_at": "document_idle"
      }
   ],
   "options_page": "options.html",
   "background_page": "background.html"

}
